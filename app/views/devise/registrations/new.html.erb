<div class="row">
	<div class="span4">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
  <%= devise_error_messages! %>
  
<fieldset>
	<legend>Sign Up</legend>

  <div class="field">
    <%= f.input :first_name %><br />
  </div>
  
  <div class="field">
    <%= f.input :last_name %><br />
  </div>
  
  <div class="field">
    <%= f.input :profile_name %><br />
  </div>
  
  <div class="field">
    <%= f.input :email %><br />
  </div>

  <div class="field">
    <%= f.input :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.input :password_confirmation %><br />
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
</fieldset>
<% end %>
</div>
</div>

<%= render "devise/shared/links" %>
